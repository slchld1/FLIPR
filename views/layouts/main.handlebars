  <title>FLIPR</title>
  <!--  Bootstrap CDNs -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/4f46042201.js" crossorigin="anonymous"></script>
  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap" rel="stylesheet">
  <!-- CSS -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" type="text/css" href="/css/shop.css">
  <link rel="stylesheet" type="text/css" href="/css/login.css">
  <link rel="stylesheet" type="text/css" href="/css/join.css">
  <link rel="stylesheet" type="text/css" href="/css/cart.css">
  <link rel="stylesheet" type="text/css" href="/css/home.css">

  <title>FLIPR</title>
</head>

<body>
  <header>
        <!-- Navigation-->
          <nav id="index-navbar" class="navbar navbar-expand-lg navbar-light col-12">
            <a class="navbar-brand" href="/">FLIPR</a>
            
            <!-- Toggle navigation -->
            <button 
                 class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarExample01"
                aria-controls="navbarExample01"
                aria-expanded="false"
                aria-label="Toggle navigation"  >
               <i class="fas fa-bars"></i>
            </button>
                 <div class="collapse navbar-collapse" id="navbarExample01">

                    <ul class="navbar-nav ms-auto me-4 my-3 my-lg-0">
                        <li class="nav-item active">
                        {{#if home}}
                        <a class="nav-link selected-nav-link" href="/">Home</a>
                        {{else}}
                        <a class="nav-link" href="/">Home</a>
                        {{/if}}
                    </li>
                        <li class="nav-item"><a class="nav-link me-lg-3" href="/products">SHOP</a></li>
                        <div class="input-group">
                        
                        <input type="text" 
                        id='product-search'
                        class="form-control border-end-0" placeholder="Search" aria-label="form" aria-describedby="form">
                        <span class="input-group-text bg-transparent"><i class="fa-solid fa-magnifying-glass"></i></span>
                        </div>
                    </ul>
                    {{#if logged_in}}
                    <li class="nav-item login">
                        {{#if myaccount}}
                        {{!-- <i class="fa-regular fa-user"></i> --}}
                        <a class="nav-link selected-nav-link" href="/myaccount">My account</a>
                        {{else}}
                        {{!-- <i class="fa-regular fa-user"></i> --}}
                        <a class="nav-link" href="/myaccount">My account</a>
                        {{/if}}
                    </li>
                    <li class="nav-item login">
                        <a class="nav-link" id="log-in-out">Log Out</a>
                    </li>
                    {{else}}
                    <li class="nav-item login">
                        {{#if login}}
                        {{!-- <i class="fa-regular fa-user"></i> --}}
                        <a class="nav-link selected-nav-link" href="/login">Log In</a>
                        {{else}}
                        {{!-- <i class="fa-regular fa-user"></i> --}}
                        <a class="nav-link" href="/login">Log In</a>
                        {{/if}}
                    </li>
                    
                    <li class="nav-item join">
                        {{#if signup}}
                        {{!-- <i class="fa-solid fa-plus"></i> --}}
                        <a class="nav-link selected-nav-link" href="/join">Join</a>
                        {{else}}
                        {{!-- <i class="fa-solid fa-plus"></i> --}}
                        <a class="nav-link" href="/join">Join</a>
                        {{/if}}
                    </li>
                        {{/if}}
                  <a class="nav-link" href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
        </nav>
  </header>

{{{ body }}}

