<div="container mx-auto mt-4">
    <div class="row" id="product-card">
    {{#each products}}
    <div class="col-md-3 eachcard">
      <div class="card">
        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
          <img src="{{this.media}}" class="img-fluid product-image"/>
          <a href="/products/{{this.id}}">
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
          </a>
        </div>
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">${{this.currency}}</p>
          <a href="/cart" class="btn btn-dark btn-sm px-5 cart-button" type="submit" data-toggle="modal" data-target="#cartModal">Add to cart</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<!-- Modal for added to cart -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="col-11 modal-title text-center" id="exampleModalLabel">Added to Cart</h5>
        <button type="button" class="btn-close" data-dismiss="modal"  aria-label="Close"></button>
      </div>
    
      <div class="modal-footer">
        <button type="button" class="btn modal-btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
        <a href="/cart" type="submit" class="btn btn-dark modal-btn btn-sm">
        View Cart</button></a>
      </div>
    </div>
  </div>
</div>